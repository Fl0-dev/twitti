{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>


    <div class="container position-static pt-3 ">
            <div class="container-lg d-grid gap-3 ">
                {% for twit in twits %}
                        <div class="container text-white bg-danger shadow-lg" style="max-width: 65rem;">
                            <div class="card-header d-grid gap-3 ">User 1</div>
                            <div class="card-body d-grid gap-3">
                                <p class="card-text text-center ">{{ twit.content }} </p>

                                <div class=" row text-center">

                                    <div class="col">
                                        <a href="" style="color:white;"><i class="bi bi-suit-heart"></i></a>
                                    </div>

                                    <div class="col">
                                        <a href="" style="color:white;"><i class="bi bi-box-arrow-in-up"></i></a>
                                    </div>

                                    <div class="col">
                                        <a href="" style="color:white;"><i class="bi bi-three-dots"></i></a>
                                    </div>

                                </div>
                            </div>
                        </div>
                {% endfor %}

            </div>
    </div>

{% endblock %}